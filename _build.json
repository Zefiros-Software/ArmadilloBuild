[
    {
        "version": ">6.0.0 || @head",
        "projects":
        [
            {
                "project": "Armadillo",
                "options": {
                    "Cpp11": false
                },
                "do":
                [
                    {"kind": "StaticLib"},
                    {"language": "C++"},
                    {"files": [
                       "include/**.hpp",
                       "include/armadillo" 
                    ]},
                    {"exportincludedirs": [
                        "include/"                        
                    ]},
                    {
                        "filter-options": [
                            {"Cpp11": false}
                        ],
                        "do":
                        [
                            {"exportdefines": "ARMA_DONT_USE_CXX11" }
                        ]
                    },
                    {
                        "filter-options": [
                            {"Cpp11": true}
                        ],
                        "do":
                        [
                            {"exportdefines": [
                                "ARMA_USE_CXX11", 
                                "ARMA_SURPRESS_CXX11_WARNING"
                            ]}
                        ]
                    }
                ]
        
            }
        ]
    }
]