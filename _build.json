[
    {
        "version": ">6.0.0 || @head",
        "projects":
        [
            {
                "project": "Armadillo",
                "do":
                [
                    {"configurations": [ "NoCpp11" ]},
                    {"kind": "StaticLib"},
                    {"exportincludedirs": [
                        "include/"                        
                    ]},
                    {"files": [
                       "include/**" 
                    ]},
                    {"filter": "NoCpp11",
                    "do":
                    [
                        {"exportdefines": "ARMA_USE_CXX11" }
                    ]},
                    {"filter": "not NoCpp11",
                    "do":
                    [
                        {"exportdefines": [
                            "ARMA_DONT_USE_CXX11", 
                            "ARMA_SURPRESS_CXX11_WARNING"
                        ]}
                    ]}
                ]
        
            }
        ]
    }
]