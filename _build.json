[
    {
        "version": ">6.0.0 || @head",
        "projects":
        [
            {
                "project": "Armadillo",
                "options": {
                    "Cpp11": true
                },
                "do":
                [
                    {"kind": "StaticLib"},
                    {"language": "C++"},
                    {"headeronly": true},
                    {"files": [
                       "include/**.hpp",
                       "include/armadillo" 
                    ]},
                    {"export":[
                        {"includedirs": "include/"}
                    ]},
                    {
                        "filter-options": {
                            "Cpp11": true
                        },
                        "do":
                        [
                            {"export":[
                                {"defines": [
                                    "ARMA_USE_CXX11", 
                                    "ARMA_SURPRESS_CXX11_WARNING"
                                ]}
                            ]}
                        ],
                        "otherwise":
                        [
                            {"export":[
                                {"defines": "ARMA_DONT_USE_CXX11"}
                            ]}
                        ]
                    }
                ]
        
            }
        ]
    }
]