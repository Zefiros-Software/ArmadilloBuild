[
    {
        "version": ">6.0.0 || @head",
        "projects":
        [
            {
                "project": "Armadillo",
                "options": [
                    {"Cpp11": false}
                ],
                "do":
                [
                    {"kind": "StaticLib"},
                    {"exportincludedirs": [
                        "include/"                        
                    ]},
                    {"files": [
                       "include/**" 
                    ]},
                    {"filter": "options:Cpp11",
                    "do":
                    [
                        {"exportdefines": "ARMA_USE_CXX11"}
                    ]},
                    {"filter": "options:not Cpp11",
                    "do":
                    [
                        {"exportdefines": "ARMA_DONT_USE_CXX11"}
                    ]}
                ]
        
            }
        ]
    }
]