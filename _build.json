[
    {
        "version": ">6.0.0 || @head",
        "projects":
        [
            {
                "project": "Armadillo",
                "do":
                [
                    {"kind": "StaticLib"},
                    {"configurations": [ "NoCpp11" ]},
                    {"language": "C++"},
                    {"files": [
                       "include/**.hpp",
                       "include/armadillo" 
                    ]},
                    {"export": [
                        {"includedirs": "include/"}
                    ]},
                    {"filter": "NoCpp11",
                    "do":
                    [
                        {"export": [
                            {"defines": "ARMA_DONT_USE_CXX11"}
                        ]}
                    ]},
                    {"filter": "not NoCpp11",
                    "do":
                    [
                        {"export": [
                            {"defines": [
                                "ARMA_SURPRESS_CXX11_WARNING",
                                "ARMA_USE_CXX11"
                            ]}
                        ]}
                    ]}
                ]
        
            }
        ]
    }
]